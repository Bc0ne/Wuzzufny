<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
        <!-- NavBar-->
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="~/Home">
                        <h2>Wuzzufny</h2>
                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse ">
                    <ul class="nav navbar-nav">
                        <li><a href="~/Home/Index"><i class="glyphicon glyphicon-home"></i> Home</a></li>
                       
                        <li><a href="~/Home/About"><i class="glyphicon glyphicon-info-sign"></i> About</a></li>
                        <li><a href="~/Home/Contact"><i class="glyphicon glyphicon-envelope"></i> Contact</a></li>
                        <li>
                            @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                            {
                            <input type="text" name="searchName" id="searchName" placeholder="Search here..." />
                            }
                        </li>
                    </ul>
                   
                    <!-- Partial login -->
                    @Html.Partial("_Login")
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row" style="min-height:550px;">
                @RenderBody()
            </div>
        </div>
  
        <!--Footer-->
    <footer class="navbar navbar-fixed-bottom myfooter">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3><i class="glyphicon glyphicon-question-sign"></i>
                    Who are we?</h3>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
                    </p>
                </div>
                <div class="col-md-4">
                    <h3>
                    <i class="glyphicon glyphicon-globe"></i>
                    Jobs
                    </h3>
                    <ul>
                        <li><a href="#">General Jobs</a></li>
                        <li><a href="#">Special Jobs</a></li>
                        <li><a href="#">Global Jobs</a></li>
                        <li><a href="#">Various Jobs</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h3><i class="glyphicon glyphicon-envelope"></i>
                    Social Media</h3>
                    <ul>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Youtume</a></li>
                        <li><a href="#">Leave a message</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="subfooter">
            <span>Wuzzufny &copy; - All Rights Reserved 2018</span>
        </div>
    </footer>
        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        @RenderSection("scripts", required: false);
</body>
</html>
