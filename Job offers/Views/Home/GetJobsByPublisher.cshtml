@model IEnumerable<Job_offers.Models.JobsViewModel>

@{
    ViewBag.Title = "All Jobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



@foreach (var gr in Model)
{
    <h3>@gr.JobTitle</h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Message</th>
            <th>Apply Date</th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.ApplyDate
                </td>
            </tr>
        }
    </table>
}